<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<div class="container">
  <h1 class="m-2 fw-bold ">New Game</h1>
    <div class="card-body row">
      <% @letter.each do |item| %>
        <div class="col-1 p-3 m-1 bg-info text-dark text-center text-white fw-bold fs-3">
          <%= item %>
        </div>
      <% end %>
    </div>
    <br>
    <p>What is the longest word you can find? </p>

    <form action="/score" method="POST" data-turbo="false">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :grid, @letter %>
      <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Any Text?" name="word" id="" value="<%= params[:word] %>">
        <input type="submit" name="" id="" value="play">
      </div>
    </form>
</div>
